    <script type="text/javascript">
        function enviar_chamada(){
            var erros = 0;
            $(".validar").attr("class", ""); 
            $(".validarcomposto").attr("class", "");

            if (validarNome($("#id_nome").val()) == false){
                erros += 1;
                $("#span_nome").attr("class", "validar"); 
            }
            if ($("#id_orgaosolicitante").val() == ""){
                erros += 1;
                $("#span_orgaosolicitante").attr("class", "validar");
            }
            if ($("#id_endereco").val() == ""){
                erros += 1;
                $("#span_endereco").attr("class", "validar");
            }
            if ($("#id_complemento").val() == ""){
                erros += 1;
                $("#span_complemento").attr("class", "validar");
            }  
            if ($("#id_bairro").val() == ""){
                erros += 1;
                $("#span_bairro").attr("class", "validar");
            }
            if ($("#id_cidade").val() == ""){
                erros += 1;
                $("#span_cidade").attr("class", "validar");
            }   
            if ($("#id_ntombamento").val() == ""){
                erros += 1;
                $("#span_ntombamento").attr("class", "validar");
            } 
            if ($("#id_setor").val() == ""){
                erros += 1;
                $("#span_setor").attr("class", "validar");
            } 
            if ($("#id_ordemconsoft").val() == ""){
                erros += 1;
                $("#span_ordemconsoft").attr("class", "validar");
            } 
            if ($("#id_numero").val() == ""){
                erros += 1;
                $("#span_numero").attr("class", "validar");
            } 
            if ($("#id_cep_1").val() == ""){
                erros += 1;
                $("#span_cep_1").attr("class", "validarcomposto");
            } 
            if ($("#id_cep_2").val() == ""){
                erros += 1;
                $("#span_cep_2").attr("class", "validarcomposto");
            }
            if ($("#id_estado").val() == "Selecione"){
                erros += 1;
                $("#span_estado").attr("class", "validar");
            }  
            if ($("#id_ddd").val() == ""){
                erros += 1;
                $("#span_ddd").attr("class", "validarcomposto");
            }
            if ($("#id_fone").val() == ""){
                erros += 1;
                $("#span_fone").attr("class", "validarcomposto");
            }
            if ($("#id_ramal").val() == ""){
                erros += 1;
                $("#span_ramal").attr("class", "validarcomposto");
            }
            if (validarEmail($("#id_email").val()) == false){
                erros += 1;
                $("#span_email").attr("class", "validar");
            }
            if ($("#id_modelo").val() == ""){
                erros += 1;
                $("#span_modelo").attr("class", "validar");
            }
            if ($("#id_potencia").val() == ""){
                erros += 1;
                $("#span_potencia").attr("class", "validar");
            }
            if ($("#id_numerodeserie").val() == ""){
                erros += 1;
                $("#span_numerodeserie").attr("class", "validar");
            }
            if ($("#id_nserienotafiscal").val() == ""){
                erros += 1;
                $("#span_nserienotafiscal").attr("class", "validar");
            }
            if ($("#id_descricao").val() == ""){
                erros += 1;
                $("#span_descricao").attr("class", "validar");
            }                

            if (erros == 0){
                $("#form").ajaxSubmit({
                    success: function(responseText, statusText){
                        if(responseText == "sucesso"){
                            $("#aviso_envio").attr("class", "success");
                            $("#aviso_envio").html("Sua solicitação foi enviada com sucesso!");    
                            $("input").val("");
                        }
                        else {
                            $("#aviso_envio").attr("class", "error");
                            $("#aviso_envio").html("Ops! Houve problemas no envio. Tente novamente!"); 
                        }    
                    }
                });
            } else {
                $("#aviso_envio").attr("class", "notice");
                $("#aviso_envio").html("Atenção! Verifique os campos em destaque e envie novamente");
            } 
            return false
        }
    </script>
